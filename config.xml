<?xml version='1.0' encoding='utf-8'?>
<widget id="com.armanco.differential" version="4.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Differential</name>
    <description>
        This app is the rules for computing the derivative of a function in calculus.
    </description>
    <author email="arman.co.com@gmail.com" href="http://arman.co.com">
        Armanco
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#ffdf49" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" />
    <plugin name="cordova-plugin-admob-free" />
    <icon src="res/icon.png" />
</widget>
